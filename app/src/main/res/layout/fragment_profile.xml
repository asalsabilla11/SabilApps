<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment"
    android:background="@drawable/pink">

    <LinearLayout
        android:id="@+id/lin_atas_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_image_profile"
            android:layout_width="120dp"
            android:layout_height="120dp">
        </ImageView>
        <TextView
            android:id="@+id/tv_nama_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="24sp"
            android:textColor="#00BCD4">
        </TextView>
        <TextView
            android:id="@+id/tv_desc_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Be Better"
            android:textColor="#00BCD4">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_bawah_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/lin_atas_profile"
        tools:layout_editor_absoluteX="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Telepon"
            android:textColor="#00BCD4"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/tv_notel_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="notel"
            android:textColor="#00BCD4"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#00BCD4"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/tv_email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="email"
            android:textColor="#00BCD4"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media Social"
            android:textColor="#00BCD4"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/tv_sosmed_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="instagram"
            android:textColor="#00BCD4"></TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>